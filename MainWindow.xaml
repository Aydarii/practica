<Window x:Class="pract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract"
        mc:Ignorable="d"
               Title="Авторизация/Регистрация" Height="450" Width="800" Background="#4287f5">
    <Grid Margin="0,0,-12,-25">
        <TextBlock Text="Авторизация" Margin="306,41,306,326" FontSize="20" FontWeight="ExtraBold"></TextBlock>
        <TextBlock Text="Введите логин:" FontSize="15" Margin="270,147,343,260" FontWeight="Bold"></TextBlock>
        <TextBox FontSize="13" Margin="270,179,306,235" x:Name="login" BorderThickness="2" BorderBrush="Black"></TextBox>
        <TextBlock Text="Введите пароль:" FontSize="15" Margin="270,210,343,197"  FontWeight="Bold"/>
        <TextBox FontSize="13" Margin="270,242,306,172" x:Name="password" BorderThickness="2" BorderBrush="Black"/>
        <Button Content="Войти" x:Name="voyti" FontWeight="ExtraBold" Margin="270,292,428,121" BorderThickness="2" BorderBrush="Black" Click="voyti_Click"></Button>
        <Button Content="Регистрация" x:Name="regis" FontWeight="ExtraBold" Margin="392,292,306,121" BorderThickness="2" BorderBrush="Black" Click="regis_Click"/>
    </Grid>
</Window>

